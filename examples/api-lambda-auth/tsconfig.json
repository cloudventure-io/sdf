{
    "compilerOptions": {
        "module": "ES2020",
        "rootDir": "./",
        "outDir": "./dist",
        "target": "ES2020",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "moduleResolution": "node",
        "types": ["node", "jest", "@cloudventure/sdf/types", "@types/aws-lambda"],
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": ["backend", "infrastructure"]
}
