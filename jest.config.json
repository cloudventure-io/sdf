{
  "transform": {
    "^.+\\.ts$": ["@cloudventure/jest-transformer-esbuild"],
    "\\.ts\\.hbs": ["./tmp/jest-raw-transformer.js"]
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/.github",
    "<rootDir>/dist",
    "<rootDir>/tmp",
    "<rootDir>/examples"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "extensionsToTreatAsEsm": [".ts"],
  "clearMocks": true,
  "testTimeout": 60000
}
