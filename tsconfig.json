{
  "compilerOptions": {
    "module": "ES2015",
    "rootDirs": ["./src"],
    "outDir": "dist/types",
    "target": "ES2015",
    "lib": ["ES2015"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["./publish", "./src/**/*.test.ts"]
}
