{
  "compilerOptions": {
    "module": "ES2020",
    "rootDirs": ["./src"],
    "outDir": "dist/",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["./publish"]
}
